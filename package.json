{
	"name": "devcycle-featureflags",
	"displayName": "DevCycle-FeatureFlags",
	"description": "",
	"version": "0.0.1",
	"publisher": "DevCycle",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:devcycle-featureflags.login",
		"onCommand:devcycle-featureflags.logout",
		"onCommand:devcycle-featureflags.refresh-usages",
		"onCommand:devcycle-featureflags.status",
		"onCommand:devcycle-featureflags.select-project",
		"onCommand:devcycle-featureflags.select-organization",
		"onView:devcycle-sidebar",
		"onView:devcycleCodeUsages"
	],
	"main": "./out/extension.js",
	"contributes": {
		"capabilities": {
			"hoverProvider": "true"
		},
		"views": {
			"explorer": [
				{
					"type": "webview",
					"id": "devcycle-sidebar",
					"name": "DevCycle"
				},
				{
					"id": "devcycleCodeUsages",
					"name": "DevCycle Code Usages"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "devcycleCodeUsages.refresh",
					"when": "view == devcycleCodeUsages",
					"group": "navigation"
				}
			]
		},
		"commands": [
			{
				"command": "devcycle-featureflags.login",
				"category": "DevCycle",
				"title": "Log in to DevCycle",
				"icon": {
					"light": "media/togglebot.svg",
					"dark": "media/togglebot-white.svg"
				}
			},
			{
				"command": "devcycle-featureflags.logout",
				"category": "DevCycle",
				"title": "Log out of DevCycle",
				"icon": {
					"light": "media/togglebot.svg",
					"dark": "media/togglebot-white.svg"
				}
			},
			{
				"command": "devcycle-featureflags.status",
				"category": "DevCycle",
				"title": "Check CLI Status",
				"icon": {
					"light": "media/togglebot.svg",
					"dark": "media/togglebot-white.svg"
				}
			},
			{
				"command": "devcycle-featureflags.select-project",
				"category": "DevCycle",
				"title": "Select DevCycle Project",
				"icon": {
					"light": "media/togglebot.svg",
					"dark": "media/togglebot-white.svg"
				}
			},
			{
				"command": "devcycle-featureflags.select-organization",
				"category": "DevCycle",
				"title": "Select DevCycle Organization",
				"icon": {
					"light": "media/togglebot.svg",
					"dark": "media/togglebot-white.svg"
				}
			},
			{
				"command": "devcycleCodeUsages.refresh",
				"category": "DevCycle",
				"title": "Refresh Code Usages",
				"icon": "$(refresh)"
			}
		],
		"languages": [
			{
				"id": "star-rod-script",
				"extensions": [
					".bpat",
					".bscr",
					".mpat",
					".mscr"
				],
				"aliases": [
					"Star Rod Script",
					"mscr"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "star-rod-script",
				"scopeName": "source.mscr",
				"path": "./syntaxes/mscr.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.64.0",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"@vscode/test-electron": "^2.1.2",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"axios": "^0.26.0",
		"change-case": "^4.1.2"
	}
}
